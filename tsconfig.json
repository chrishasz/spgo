{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "sourceMap": true,
        "removeComments": true,
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": [
		"src/**/*.ts",
		"./node_modules/vscode/vscode.d.ts",
		"./node_modules/vscode/lib/*",
        "test/**/*"
    ],
    "exclude": [
        ".vscode-test"
    ]
}